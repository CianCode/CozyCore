# Cozy Core Environment Variables
# Copy this file to .env and fill in the values

# Database (Docker Compose default)
DATABASE_URL=postgresql://cozycore:cozycore@localhost:5432/cozycore

# Discord OAuth & Bot
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Public Discord Client ID (for client-side use)
NEXT_PUBLIC_DISCORD_CLIENT_ID=

# Better Auth
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000

# App URL (for client-side auth)
NEXT_PUBLIC_APP_URL=http://localhost:3000
